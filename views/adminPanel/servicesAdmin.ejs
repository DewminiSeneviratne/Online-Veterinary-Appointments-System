<%- include('../_partial/_navbarAdminPanel'); -%>
    <html>

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            div.content {
                margin-left: 200px;
                padding: 1px 16px;
                height: 1000px;
            }

            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 85%;
                margin-left: 210px;

            }

            td {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            th {
                border: 1px solid #dddddd;
                text-align: center;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }

            .headercolor {
                background-color: black;
                color: #dddddd;
            }
        </style>
    </head>

    <body>
        <br><br><br><br><br> <br><br><br>

        <table>
            <tr colspan="4">
                <th>Add Service</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <!--<th>Animals</th>-->
                <th>Price</th>
            </tr>
            <form method="post" action="/addService">
                <tr>
                    <td>
                        <input type="text" name="servicename" placeholder="Service Name" />
                    </td>
                    <td>
                        <input type="text" name="servicedescription" placeholder="Service Description" />
                    </td>
                    <!--<td>
                        <input type="text" name="serviceanimals" placeholder="Animals" />
                    </td>-->
                    <td>
                        <input type="text" name="serviceprice" placeholder="Price" />
                    </td>

                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <button type="submit">ADD SERVICE</button>
                    </td>
                </tr>
            </form>
        </table>
        <br><br><br>
        <table>
            <tr class="headercolor">
                <th>Name</th>
                <th>Description</th>
                <!--<th>Animals</th>-->
                <th>Price</th>
                <th>Action</th>
            </tr>
            <% services.forEach(function(service, index) { %>
                <tr>

                    <td>
                        <%= service.servicename %>
                    </td>
                    <td>
                        <%= service.servicedescription %>
                    </td>
                    <!--<td>
                        <%= service.animals %>
                    </td>-->
                    <td>
                        <%= service.price %>
                    </td>
                    <td>
                        <a href="" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                        <a href="" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                    </td>
                </tr>
                <% }) %>
        </table>
    </body>

    </html>