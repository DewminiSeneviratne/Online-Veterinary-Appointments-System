<%- include('../_partial/_navbarAdminPanel'); -%>

  <html>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      div.content {
        margin-left: 200px;
        padding: 1px 16px;
        height: 1000px;
      }

      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 85%;
        margin-left: 210px;

      }

      td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }

      .headercolor {
        background-color: black;
        color: #dddddd;
      }
    </style>
  </head>

  <body>
    <br><br><br><br><br> <br>

    <h1 style="margin-left: 15%;">Inquiries</h1>

    <table>
      <tr class="headercolor">
        <th>id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Contact Number</th>
        <th>Message</th>
        <th>Action</th>
      </tr>
      <% contacts.forEach(function(contact, index) { %>
        <tr>
          <td>
            <%= index %>
          </td>
          <td>
            <%= contact.contactname %>
          </td>
          <td>
            <%= contact.contactemail %>
          </td>
          <td>
            <%= contact.contactno %>
          </td>
          <td>
            <%= contact.message %>
          </td>
          <td>
            <a href="/deleteInquiry/<%= contact._id %>" class="text-danger"
              style="margin:auto;display: block;width: 90px;height: 30px;background: rgb(233, 63, 63);
              padding:2px;text-align: center;border-radius: 5px;color: white;line-height: 25px;text-decoration: none;">Delete</a>
          </td>
        </tr>
        <% }) %>
    </table>


    <br><br><br><br><br>

  </body>