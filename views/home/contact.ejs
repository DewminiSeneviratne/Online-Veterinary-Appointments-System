<%- include('../_partial/_header'); -%>

	<html>

	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="/css/contact.css" rel="stylesheet" type="text/css">
		<style>
			body {
				background-image: linear-gradient(rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6)), url('/images/contactback.jpg');
				background-repeat: no-repeat;
				background-attachment: fixed;
				background-size: cover;

			}

			.button:hover {
				color: black;
				box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19)
			}


			.alert {
				padding: 20px;
				background-color: #51d9a7;
				color: white;
			}

			.closebtn {
				margin-left: 15px;
				color: white;
				font-weight: bold;
				float: right;
				font-size: 22px;
				line-height: 20px;
				cursor: pointer;
				transition: 0.3s;
			}

			.closebtn:hover {
				color: black;
			}

			* {
				box-sizing: border-box;
			}

			/* Create two equal columns that floats next to each other */
			.column1 {
				text-align: left;
				float: left;
				width: 50%;
				padding: 100px;
			}

			.column2 {
				float: left;
				width: 50%;
				padding: 0px;
			}

			/* Clear floats after the columns */
			.row:after {
				content: "";
				display: table;
				clear: both;
			}
		</style>
	</head>

	<body><br><br><br><br><br> <br><br><br>
		<% if(message !='' ) { %>
			<div class="alert">
				<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
				<strong>Success!</strong>
				<br>
				<%= message %>
			</div>

			<% } %>

				<div class="row">
					<div class="column1">
						<h2 style="font-family: papyrus; font-size: 40px; font-weight: bold;">Contact Info</h2>
						<p style="font-family: comic sans ms;">
							<br>
							<br>
							<b>Lil Paws Vet Clinic</b>
							<br>
							175, Bernard Mawatha, Colombo 5, Sri Lanka
							<br><br>
							<b>Phone</b>
							<br>
							General line: +94 11 7 400 400 / +94 11 7 400 500 (8.30AM-8PM)<br>
							24hr Emergency line: +94 777 740 750
							<br><br>
							<b>Email</b>
							<br>
							info@lilpaws.lk
							<br><br>
							<b>Office Hours</b>
							<br>
							Mon-Sun 5:00 pm â€“ 8:00 pm
						</p>
					</div>




					<div class="column2">
						<h2 style="font-family: papyrus; font-size: 40px; font-weight: bold;">Need Help?</h2>
						<br>



						<form action="/contact/add" method="POST">

							<div class="form-group">
								<h1>Drop us a message</h1>
								<br><br><br><br><br><br><br>
								<label>Your Name: </label>
								<input type="text" name="contactname" id="contactname" placeholder="*Enter your name"
									required />
							</div>
							<div class="form-group">
								<label>Your Email:</label>
								<input type="email" name="contactemail" id="contactemail"
									placeholder="*Enter your email" required />
							</div>
							<div class="form-group">
								<label>Your Contact Number:</label>
								<input type="tel" name="contactno" id="contactno"
									placeholder="*Enter your contact number" pattern="[0-9]{10}" required />
							</div>
							<div class="form-group">
								<label>Your Message:</label>
								<textarea rows="3" name="message" id="message" placeholder="*Your Message"
									required></textarea>
							</div>
							<div>
								<input type="submit" class="button" value="Send" />

								<input type="reset" class="button" value="Cancel" />
							</div>
						</form>
					</div>
				</div>






				<br><br><br><br><br>
	</body>

	</html>

	<%- include('../_partial/_footer'); -%>